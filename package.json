{
  "name": "@deepjs/spec",
  "private": true,
  "version": "1.0.0",
  "description": "这是一份前端开发规范。",
  "keywords": [],
  "homepage": "https://github.com/cloudyan/spec#readme",
  "bugs": {
    "url": "https://github.com/cloudyan/spec/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cloudyan/spec.git"
  },
  "license": "ISC",
  "author": "",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs",
    "alex": "npx alex .",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "eslint": "cross-env TIMING=1 eslint --ext .js,.jsx,.ts,.tsx --format=pretty ./src",
    "eslint:fix": "npm run eslint -- --fix",
    "eslint:report": "npm run eslint -- --format json --output-file ./eslint-report.json",
    "jscpd": "npx jscpd ./src",
    "lint": "run-s prettier eslint stylelint",
    "lint-staged": "lint-staged --allow-empty",
    "lint:md": "markdownlint --config ./.markdownlint.json README.md */README.md",
    "mdlint": "npx markdownlint-cli './**/*.md' --ignore node_modules",
    "prepare": "husky install",
    "prettier": "prettier . --check",
    "prettier:fix": "npm run prettier -- --write",
    "prettier:diff": "npm run prettier:fix && git --no-pager diff && git checkout -- .",
    "sort": "npx sort-package-json",
    "stylelint": "stylelint --allow-empty-input 'src/**/*.{css,less,scss,sass}'",
    "stylelint-prettier-check": "stylelint-config-prettier-check",
    "stylelint:fix": "npm run stylelint -- --fix",
    "test": "echo 'test success'",
    "test:fail": "echo \"Error: no test specified\" && exit 1",
    "test:staged": "jest --bail --findRelatedTests",
    "typecheck": "tsc -p ."
  },
  "lint-staged": {
    "*.{json,md,yml,yaml}": [
      "npm run prettier:fix"
    ],
    "*.{js,jsx,ts,tsx}": [
      "npm run prettier:fix",
      "npm run eslint:fix"
    ],
    "*.{css,less,scss}": [
      "npm run prettier:fix",
      "npm run stylelint:fix"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.18.2",
    "@babel/eslint-parser": "^7.18.2",
    "@babel/preset-env": "^7.18.2",
    "@commitlint/cli": "^16.3.0",
    "@commitlint/config-conventional": "^16.2.4",
    "cross-env": "^7.0.3",
    "eslint": "^8.16.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-formatter-pretty": "^4.1.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "prettier-eslint": "^15.0.1",
    "prettier-stylelint": "^0.4.2",
    "stylelint": "^14.8.5",
    "vitepress": "1.0.0-alpha.1"
  }
}
